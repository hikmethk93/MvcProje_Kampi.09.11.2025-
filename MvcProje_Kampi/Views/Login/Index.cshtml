
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>MVC KAMP LOGİN</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4Tema/login-form-19/css/style.css">
    @*<style>
            /* buraya override gelecek */
            body {
                background: #f0f0f0 !important; /* pembe arka plan düz gri ile değişti */
            }

            .ftco-section {
                background: transparent !important;
            }
        </style>*@
    <style>
        body {
            background-image: url('/AdminLTE-3.0.4Tema/login-form-19/images/arkaplan.png'); /* kendi resminin yolu */
            background-size: cover; /* ekranı tamamen kaplasın */
            background-position: center; /* ortalasın */
            background-repeat: no-repeat;
            background-attachment: fixed; /* kaydırma ile sabit kalsın */
        }

        /* Section, container, row arka planını şeffaf yapıyoruz ki resim görünsün */
        .ftco-section,
        .ftco-section .container,
        .ftco-section .row {
            background: transparent !important;
        }
    </style>


</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section" style="
    display: inline-block;
    padding: 15px 25px;
    background-color: #d1d1d1;   /* açık gri arka fon */
    color: #2d2d2d;               /* yazı rengi koyu gri */
    border-radius: 15px;          /* yuvarlak köşe */
    box-shadow: 0 4px 8px rgba(0,0,0,0.2); /* hafif gölge */
    font-weight: 700;
    font-size: 28px;
    text-align: center;
    letter-spacing: 1px;
">
                        Mvc Proje Kampı Admin Girişi
                    </h2>

                    @*<h2 class="heading-section">Mvc Proje Kampı Admin Girişi</h2>*@
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/AdminLTE-3.0.4Tema/login-form-19/images/ADMİN.png); "></div>    @*bg.jpg*@
                        <h3 class="text-center mb-0">Hoş Geldiniz</h3>
                        <p class="text-center">Lütfen Boş Alanlara Bilgilerinizi Giriniz</p>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control"name="AdminUserName" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="AdminPassword" placeholder="******" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi Unuttum</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        }
                        <div class="w-100 text-center mt-4 text">

                            <a href="#">Anasayfaya Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4Tema/login-form-19/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4Tema/login-form-19/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4Tema/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4Tema/login-form-19/js/main.js"></script>

</body>
</html>


